---
import { DesktopMenu, MobileMenu } from "./Menus";

export interface Props {
    links: any;
}

const { links } = Astro.props;

const permalink = Astro.site + "Totally-Not-a-Bunch-of-Cats/";
---

<DesktopMenu links={links} permalink={permalink} client:visible />
<MobileMenu links={links} permalink={permalink} client:load />
<script>
    window.addEventListener("scroll", function () {
        let scroll = window.scrollY;
        let MobileMenu = document.getElementById("mobile-menu");
        if (scroll > 100) {
            MobileMenu?.classList.add("d-block");
        } else {
            MobileMenu?.classList.remove("d-block");
        }
    });
</script>
