---
import BaseLayout from "../../layouts/BaseLayout.astro";

import Admonition from "../../components/admonition/admonition.astro";
import Content from "../../components/Content.astro";

const title = "Blog";
const description =
    "Keep up to date with what is going on with Totally Not a Bunch of Cats";
const permalink = Astro.site.href  + "Totally-Not-a-Bunch-of-Cats/";
import { blog } from "../../data/links.json";

const posts = (await Astro.glob('./blogs/**/*.{md,mdx}')).sort(
    (a, b) => new Date(b.frontmatter.pubDate).valueOf() - new Date(a.frontmatter.pubDate).valueOf()
);
---

<BaseLayout
    title={title}
    description={description}
    permalink={permalink}
    links={blog}
>
    <Content id="main">
        <ul>
            {posts.map((post) => (
                <li>
                    <p>
                        <time datetime={post.frontmatter.pubDate}>
                            {new Date(post.frontmatter.pubDate).toLocaleDateString('en-us', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                            })}
                        </time>
                    </p>
                    <a href={post.url}>{post.frontmatter.title}</a>
                </li>
            ))}
        </ul>

        <!-- <div class="pagination">
            <a href={}>&lt;</a>{page.currentPage}<a href={}>&gt;</a>
        </div> -->
    </Content>
    <style>
        ul {
            list-style-type: none;
            padding: unset;
        }
        ul li {
            display: flex;
            gap: 2rem;
        }
        ul li time {
            flex: 0 0 130px;
            font-style: italic;
            color: #888;
            font-size: inherit;
        }
        ul li a:visited {
            color: #8e32dc;
        }
    </style>
</BaseLayout>
