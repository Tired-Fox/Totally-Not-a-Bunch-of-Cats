---
import BaseHead from "../components/BaseHead.astro";
import FAHead from "../components/FAHead.astro";
import Header from "../components/header/Header.astro";
import Footer from "../components/footer/footer.astro";

export interface Props {
    title: string,
    description: string,
    permalink: string,
    links: any,
    fa?: any
}

const { title, description, permalink, links, fa } = Astro.props;
---

<html lang="en">
    <head>
        <BaseHead
            title={title}
            description={description}
            permalink={permalink}
        />
        {fa && <FAHead />}
    </head>

    <body>
        <Header links={links} />

        <main>
            <slot />
        </main>

        <Footer links={links} />
    </body>
</html>
