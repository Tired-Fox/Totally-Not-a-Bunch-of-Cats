---
import { ViewTransitions } from "astro:transitions";
import BaseHead from "@component/BaseHead.astro";
import Footer from "@component/Footer.astro";
import { Header } from "@solid/header/Header";

type Props = {
  title?: string;
  description?: string;
  image?: string;
  centered?: boolean;
  larger?: boolean;
  maxWidth?: boolean;
};

const url = Astro.url;
const { title, description, image, centered = false, larger=false, maxWidth=true } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} image={image} />
    <ViewTransitions />
  </head>
  <body
    class="flex flex-col min-h-[100vh] min-h-[100dvh] text-slate-800 overflow-x-hidden"
    transition:animate="none"
  >
    <span class="sticky top-0 left-0 z-40 pointer-events-none md:mb-[4rem]" transition:animate="none">
      <Header url={url} client:only />
    </span>
    <main
      class={`mb-[3rem] w-[100%] min-h-[calc(100dvh-2.75rem)] mx-auto ${maxWidth ? larger ? 'max-w-[115ch]': 'max-w-[90ch]':''} ${centered ? "flex flex-col items-center justify-center" : ""}`}
      transition:name="main"
      transition:animate="fade"
    >
      <slot />
    </main>
    <div class="flex-grow"></div>
    <Footer />
  </body>
</html>
